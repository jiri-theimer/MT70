@model FsmViewModel
@inject BL.Factory _f

@{
    
    if (Model.entity == null)
    {
        return;
    }

    Model.PageTitle = Model.entityTitle;

   

}

@addTagHelper *,UI

<div class="input-group m-0" style="padding-top:1px;">
    <div class="tabovergrid nonmobile" style="margin-left:1px;">        
        KLIENTI
        <span id="TheGridRows" class="badge bg-primary"></span>
    </div>
    
    <div class="dropdown">
        <button class="btn btn-light dropdown-toggle" type="button" id="cmdGridMenu" data-bs-toggle="dropdown" aria-expanded="false">
            <span id="TheGridIcon" class="k-icon k-i-table"></span>
            <span id="TheGridName">Grid<strong> & </strong>@_f.tra("Sloupce")</span>
        </button>
        <div id="divGridMenu" class="dropdown-menu" aria-labelledby="cmdGridMenu">
            Loading...
        </div>
    </div>
    <div class="dropdown">
        <button class="btn btn-light dropdown-toggle" type="button" id="cmdGridSelMenu" data-bs-toggle="dropdown" aria-expanded="false">
            <span class="k-icon k-i-checkbox-checked"></span>
            @_f.tra("Zaškrtlé záznamy")
        </button>
        <ul id="ulGridSelMenu" class="dropdown-menu dynamicmenu_container" aria-labelledby="cmdGridSelMenu"></ul>
    </div>

    @if (Model.prefix == "p31" || Model.prefix == "p41")
    {
        <div>
            @Html.EditorFor(m => m.period, "~/Views/Shared/_Period.cshtml")
        </div>

    }
    

    <div style="margin-left:auto;margin-right:2px;" class="nonmobile">
        <button type="button" class="btn btn-outline-secondary" onclick="switch_to_masterview()"><span class="k-icon k-i-cell-split-horizontally"></span>@_f.tra("Zapnou spodní panel")</button>        
    </div>
</div>



<vc:the-grid input="@Model.gridinput"></vc:the-grid>




<script type="text/javascript">
    var _pageprefix = "@Model.prefix";

    $(document.body).css("overflow", "hidden");

    $(document).ready(function () {
        

        @if(Model.period != null)
        {
        <text>
        $("#PeriodValue").on("change", function () {
            $.post(_ep("/Common/SetUserParam"), { key: "grid-period-value-" + _pageprefix,value:$(this).val()  }, function (data) {
                reload();

            });
        });

        if ($("#PeriodValue").val() != "0" && $("#PeriodValue").val() != "") {
            $("#PeriodValue").css("background-color", "red");
        }

        $("#cmdRefreshPeriod").on("click", function () {
            var k = [];
            var v = [];
            k.push("grid-period-value-" + _pageprefix);
            v.push($("#PeriodValue").val());
            k.push("grid-period-d1-" + _pageprefix);
            v.push($("#d1helper").val());
            k.push("grid-period-d2-" + _pageprefix);
            v.push($("#d2helper").val());

            $.post(_ep("/Common/SetUserParams"), { keys: k, values:v  }, function (data) {
                reload();

            });

        });

        </text>
        }


        _mainmenu_highlight_current("cmd" + _pageprefix);


    });

        function reload() {
            //_showloading();
            location.replace("/TheGrid/FlatView?prefix=" + _pageprefix);

        }



        function change_grid(j72id) {
            $.post(_ep("/Common/SetUserParam"), { key: "flatview-j72id-" + _pageprefix,value:j72id  }, function (data) {
                reload();

            });
        }

        function report_nocontext(x31id) {
            _window_open(_ep("/x31/ReportNoContext?x31id=" + x31id), 2);
        }


        function reload() {
            //_showloading();
            location.replace(_ep("/TheGrid/FlatView?prefix=" + _pageprefix));
        }

        function switch_to_masterview() {    //zapnout spodní panel
            $.post(_ep("/Common/SetUserParam"), { key: "grid-" + _pageprefix + "-show11", value: "1" }, function (data) {
                location.replace(_ep("/TheGrid/MasterView?prefix=" + _pageprefix));

            });

        }
</script>

