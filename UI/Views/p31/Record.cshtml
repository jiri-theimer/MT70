            <input type="checkbox" id="chkIsValueTrimming" asp-for="@Model.IsValueTrimming" onchange="postback('isvaluetrimming')" />
            <label for="chkIsValueTrimming">@_f.tra("Zapsat korekci úkonu")</label>
        </div>

        @if (Model.IsValueTrimming)
        {
    <div class="card-body">
        <input type="radio" id="chkp72ID_AfterTrimming4" asp-for="Rec.p72ID_AfterTrimming" value="Fakturovat" onchange="postback('isvaluetrimming')" />
        <label for="chkp72ID_AfterTrimming4" class="badge-a4" style="margin:1px;">@_f.tra("Fakturovat")</label>
        <br />
        <input type="radio" id="chkp72ID_AfterTrimming6" asp-for="Rec.p72ID_AfterTrimming" value="ZahrnoutDoPausalu" onchange="postback('isvaluetrimming')" />
        <label for="chkp72ID_AfterTrimming6" class="badge-a6" style="margin:1px;">@_f.tra("Zahrnout do paušálu")</label>
        <br />
        <input type="radio" id="chkp72ID_AfterTrimming3" asp-for="Rec.p72ID_AfterTrimming" value="SkrytyOdpis" onchange="postback('isvaluetrimming')" />
        <label for="chkp72ID_AfterTrimming3" class="badge-a3" style="margin:1px;">@_f.tra("Skrytý odpis")</label>
        <br />
        <input type="radio" id="chkp72ID_AfterTrimming2" asp-for="Rec.p72ID_AfterTrimming" value="ViditelnyOdpis" onchange="postback('isvaluetrimming')" />
        <label for="chkp72ID_AfterTrimming2" class="badge-a2" style="margin:1px;">@_f.tra("Viditelný odpis")</label>
        <br />
        <input type="radio" id="chkp72ID_AfterTrimming7" asp-for="Rec.p72ID_AfterTrimming" value="FakturovatPozdeji" onchange="postback('isvaluetrimming')" />
