            <label class="col-sm-2 col-md-2 col-form-label recpagelabel">@_f.tra("Skrytá marže") (%):</label>
            <div class="col-sm-1 col-md-1">
                <mynumber asp-for="Rec.p31MarginHidden"></mynumber>
            </div>
