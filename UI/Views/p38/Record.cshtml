@model UI.Models.Record.p38Record
@inject BL.Factory _f

@{
    Model.PageTitle = _f.tra("Odvětví aktivit");
    Layout = "~/Views/Shared/_LayoutRecord.cshtml";
}

@addTagHelper *, UI

<div class="modal_record_container">

    <div class="row">
        <label class="col-sm-1 col-md-2 col-form-label">@_f.tra("Název"):</label>
        <div class="col-sm-7 col-md-6">
            <input class="form-control" asp-for="Rec.p38Name" />
        </div>
        <label class="col-sm-1 col-md-1 col-form-label">@_f.tra("Index pořadí"):</label>
        <div class="col-sm-1 col-md-1">
            <mynumber asp-for="Rec.p38Ordinary" decimal-digits="0"></mynumber>
        </div>
    </div>
    <div class="row my-2">
        <label class="col-sm-1 col-md-2 col-form-label">@_f.tra("Kód"):</label>
        <div class="col-sm-5 col-md-4">
            <input class="form-control" asp-for="Rec.p38Code" />

        </div>

    </div>
    <div class="row my-2">
        <label class="col-sm-1 col-md-2 col-form-label">@_f.tra("Volné pole #1"):</label>
        <div class="col-sm-11 col-md-10">
            <input class="form-control" asp-for="Rec.p38FreeText01" />

        </div>

    </div>


    <div class="row my-2">
        <label class="col-sm-1 col-md-2 col-form-label">@_f.tra("Volné pole #2"):</label>
        <div class="col-sm-11 col-md-10">
            <input class="form-control" asp-for="Rec.p38FreeText02" />

        </div>

    </div>



</div>


