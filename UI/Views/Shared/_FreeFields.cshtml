@model List<FreeFieldInput>

@{
    if (Model == null)
    {
        return;
    }

}

@addTagHelper *, UI

@for (int i = 0; i <= Model.Count() - 1; i++)
{
    <div class="row my-2">

        <label class="col-sm-1 col-md-2 col-form-label">

            @if (Model[i].TypeName != "boolean")
            {
                @Model[i].x28Name
            }
        </label>

        <div class="col-sm-11 col-md-10">

            @switch (Model[i].TypeName)
            {
                @case "integer":
                <mynumber decimal-digits="0" asp-for="@Model[i].NumInput" elementid-prefix="ffinputs"></mynumber>
                break;

            @case "decimal":
            <mynumber decimal-digits="2" asp-for="@Model[i].NumInput" elementid-prefix="ffinputs"></mynumber>
            break;

        @case "date":
        <mydate asp-for="@Model[i].DateInput" elementid-prefix="ffinputs"></mydate>
        break;

        @case "datetime":
        <mydate asp-for="@Model[i].DateInput" include-time="true" elementid-prefix="ffinputs"></mydate>
        break;

    @case "boolean":
    <input type="checkbox" asp-for="@Model[i].CheckInput" />
    <label for="ff_inputs_@(i)__CheckInput">@Model[i].x28Name</label>
    break;

    @default:
    <input type="text" class="form-control" asp-for="@Model[i].StringInput" />
    break;
}

        </div>

    </div>


    <input type="hidden" asp-for="@Model[i].x28Field" />
    <input type="hidden" asp-for="@Model[i].x28Name" />
    <input type="hidden" asp-for="@Model[i].TypeName" />
}
